{
  "rules": {
    "users": {
      "$userId": {
        ".read": true,
        ".write": true,
        "fcmToken": {
          ".read": true,
          ".write": true
        },
        "profile": {
          ".read": true,
          ".write": true
        }
      }
    },
    "chats": {
      "$chatId": {
        ".read": true,
        ".write": true,
        "participantIds": {
          ".validate": "newData.hasChildren()"
        }
      }
    },
    "messages": {
      "$chatId": {
        "$messageId": {
          ".read": true,
          ".write": true,
          ".validate": "newData.hasChild('senderId')"
        }
      }
    },
    "trades": {
      "$tradeId": {
        ".read": true,
        ".write": true
      }
    },
    "products": {
      "$productId": {
        ".read": true,
        ".write": true
      }
    },
    "notifications": {
      "$userId": {
        ".read": true,
        ".write": true
      }
    }
  }
}